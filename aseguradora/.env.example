# =============================================================================
# SISTEMA DE CONTROL DE RIESGOS - CONFIGURACIÓN BACKEND
# =============================================================================

# Configuración de la Aplicación
APP_NAME="Sistema Aseguradora"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

# Configuración de Logs
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# BASE DE DATOS - CONFIGURACIÓN REQUERIDA
# =============================================================================
# Configura tu base de datos MySQL/MariaDB
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=risk_control_system
DB_USERNAME=root
DB_PASSWORD=your_database_password

# =============================================================================
# CONFIGURACIÓN DE CACHE Y SESIONES
# =============================================================================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# =============================================================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# =============================================================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# CONFIGURACIÓN DE EMAIL (PARA NOTIFICACIONES)
# =============================================================================
# Para desarrollo local (Mailpit recomendado)
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@aseguradora.com"
MAIL_FROM_NAME="${APP_NAME}"

# Para producción (ejemplo con Gmail)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_ENCRYPTION=tls

# =============================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN (SANCTUM)
# =============================================================================
# Tiempo de expiración de tokens en minutos (null = nunca expira)
# Ejemplos: 60 = 1 hora, 1440 = 24 horas, 10080 = 7 días
SANCTUM_EXPIRATION=1440

# =============================================================================
# CONFIGURACIÓN DE CORS (PARA FRONTEND)
# =============================================================================
# URLs permitidas para CORS (separadas por coma)
SANCTUM_STATEFUL_DOMAINS=localhost:3000,127.0.0.1:3000

# =============================================================================
# CONFIGURACIÓN OPCIONAL - AWS (SI USAS S3)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_s3_bucket_name
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# CONFIGURACIÓN OPCIONAL - PUSHER (PARA WEBSOCKETS)
# =============================================================================
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_key
PUSHER_APP_SECRET=your_pusher_secret
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Variables para Vite (Frontend)
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# =============================================================================
# CONFIGURACIÓN ESPECÍFICA DEL SISTEMA DE RIESGOS
# =============================================================================

# Configuración de evaluación de riesgos
RISK_EVALUATION_ENABLED=true
RISK_AUTO_DISABLE_ACCOUNTS=true
RISK_AUTO_CLOSE_TRADES=true

# Configuración de notificaciones
NOTIFICATIONS_ENABLED=true
ADMIN_NOTIFICATIONS_ENABLED=true

# Configuración de webhook
WEBHOOK_ENABLED=true
WEBHOOK_TIMEOUT=30

# Configuración de logs de auditoría
AUDIT_LOGS_ENABLED=true
AUDIT_LOGS_RETENTION_DAYS=90
